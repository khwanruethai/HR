@{ Html.BeginForm("update_contact", "Contact", FormMethod.Post);}
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            E-mail :
        </div>
        <div class="col-md-10">
            <input class="form-control" id="email_edit" name="email_edit" value="@ViewData["emp_email"]" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            เบอร์โต๊ะ :
        </div>
        <div class="col-md-10">
            <input class="form-control" id="table_edit" name="table_edit" value="@ViewData["emp_table"]"/>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            โทรศัพท์ :
        </div>
        <div class="col-md-10">
            <input class="form-control" id="phone_edit" name="phone_edit" value="@ViewData["emp_phone"]"/>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            มือถือ 1 :
        </div>
        <div class="col-md-10">
            <input class="form-control" id="mobile1_edit" name="mobile1_edit" value="@ViewData["emp_mobile1"]"/>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            มือถือ 2 :
        </div>
        <div class="col-md-10">
            <input class="form-control" id="mobile2_edit" name="mobile2_edit" value="@ViewData["emp_mobile2"]" />
            <input class="form-control" id="emp_id" name="emp_id" value="@ViewData["emp_id"]" type="hidden" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-lg-12 text-center">
            <input type="submit" class="btn btn-primary" value="แก้ไขข้อมูล" />
        </div>
    </div>
</div>
@{ Html.EndForm();}