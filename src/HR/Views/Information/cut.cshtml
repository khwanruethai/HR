    <script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
    <script>
        $(document).on('click', '.editMinus', function () {

            var x = $(this).attr('ref');
            $('#minus_id').val(x);

            $.get('../../Information/getMinus?minus=' + x, function (data) {


                $('#minus_edit').val(data);
            })

        })
        $(document).on('click', '.viewMinus', function () {

            var x = $(this).attr('ref');

            $.get('../../Information/getMinus?minus=' + x, function (data) {


                $('.minus_view').text(data);
            })



        })
    </script>
    <script>
        $(document).on('click', '.delMinus', function () {


            var x = $(this).attr('ref');
            swal({
                title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
                //text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "red",
                confirmButtonText: "ใช่, ลบข้อมูล!",
                cancelButtonText: "ไม่, ยกเลิก",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isConfirm) {
                if (isConfirm) {

                    $.get('../../Information/del_minus?id=' + x, function () {

                        swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                        location.reload();
                    })


                } else {

                    swal("ยกเลิกแล้ว", "", "error");
                }
            });

        })
    </script>