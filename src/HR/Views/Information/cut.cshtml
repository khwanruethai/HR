@{
    Layout = "_Layout";
}
@using HR.Models
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">ประเภทรายการหัก</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-12 text-right">
                <a class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> เพิ่มประเภทรายการหัก</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        ประเภทรายการหัก
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="datatable" class="table dataTable table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="text-center">ลำดับ</th>
                                                <th class="text-center">ประเภทรายการหัก</th>
                                                <th class="text-center">จัดการ</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center">
                                            @{ int i = 1;}
                                            @foreach (var item in ViewData["minus"] as List<info_minusModel>)
                                            {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.minus_name</td>
                                                <td>
                                                    <a class="btn btn-primary viewMinus" data-toggle="modal" data-target="#myModalViewMinus" ref="@item.minus_id"><i class="fa fa-search" ></i> ดูรายละเอียด</a>
                                                    <a class="btn btn-warning editMinus" data-toggle="modal" data-target="#myModalEditMinus" ref="@item.minus_id"><i class="fa fa-edit"></i> แก้ไขข้อมูล</a>
                                                    <a class="btn btn-danger delMinus" ref="@item.minus_id"><i class="fa fa-trash"></i> ลบ</a>
                                                </td>
                                            </tr>
                                                i++;
                                            }
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@{ Html.BeginForm("cut", "Information", FormMethod.Post);}
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">ประเภทรายการหัก</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            รายการหัก
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("cut", "", new { @class = "form-control", @placeholder = "ระบุประเภทรายการหัก", @required = "true" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            ผู้บันทึกข้อมูล
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("admin", "ขวัญฤทัย  เสมอกลาง", new { @class = "form-control", @readonly = "true" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center">
                <div class="text-center">
                    <input type="submit" class="btn btn-primary" value="บันทึกข้อมูล" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>
</div>
@{ Html.EndForm();}
