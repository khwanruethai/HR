    <script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
    <script>
        $(document).on('click', '.editFund', function () {

            var x = $(this).attr('ref');
            $('#fund_id').val(x);

            $.get('../../Information/getFund?fund=' + x, function (data) {

                var res = data.split('^');

                $('#fund_edit').val(res[0]);
                $('#fund_code_edit').val(res[1]);

            })

        })
        $(document).on('click', '.viewFund', function () {

            var x = $(this).attr('ref');
          
            $.get('../../Information/getFund?fund=' + x, function (data) {

                $('.fund_view').text(data);

            })

        })
</script>
<script>
    $(document).on('click', '.delFund', function () {

        var x =  $(this).attr('ref');
        swal({
            title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
            //text: "You will not be able to recover this imaginary file!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "red",
            confirmButtonText: "ใช่, ลบข้อมูล!",
            cancelButtonText: "ไม่, ยกเลิก",
            closeOnConfirm: false,
            closeOnCancel: false
        },
        function (isConfirm) {
            if (isConfirm) {

                $.get('../../Fund/del_fund?id=' + x, function () {

                    swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                    location.reload();
                })

               

            } else {

                swal("ยกเลิกแล้ว", "", "error");
            }
        });

    })
</script>
    <script>
        $(document).on('keyup', '#fund_code', function () {

            var x = $('#fund_code').val();
          // alert(x);

            $.get('../../Information/fundCode?id=' + x, function (data) {

                if (data >= 1) {

                    $('.checkCode').html('<i class="fa fa-circle" style="color:red">  มีรหัสกองทุนนี้แล้ว ไม่สามารถบันทึกข้อมูลซ้ำได้ !!</i> ');
                    $('.submit').hide();
                } else {

                    $('.checkCode').html('<i class="fa fa-circle" style="color:green">   สามารถใช้รหัสนี้ได้ !!</i>');
                    $('.submit').show();

                }

            })

        })
    </script>
   