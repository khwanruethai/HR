@{
    Layout = "_Layout";
}
@using HR.Models
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">ประเภทตำแหน่งงาน</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-12 text-right">
                <a class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> เพิ่มตำแหน่งงาน</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        ตำแหน่งงาน
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="datatable" class="table dataTable table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="text-center">ลำดับ</th>
                                                <th class="text-center">ตำแหน่งงาน</th>
                                                <th class="text-center">จัดการ</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center">
                                            @{ int i = 1;}
                                            @foreach (var item in ViewData["tab_position"] as List<info_positionModel>)
                                            {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.post_name</td>
                                                <td>
                                                    <a class="btn btn-primary viewData" ref="@item.post_id" data-toggle="modal" data-target="#myModalView"><i class="fa fa-search"></i> ดูรายละเอียด</a>
                                                    <a class="btn btn-warning editData" ref="@item.post_id" data-toggle="modal" data-target="#myModalEdit"><i class="fa fa-edit"></i> แก้ไขข้อมูล</a>
                                                    <a class="btn btn-danger delData" ref="@item.post_id"><i class="fa fa-trash"></i> ลบ</a>
                                                </td>
                                               
                                            </tr>
                                                i++;
                                            }
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@{ Html.BeginForm("insertPosition", "Information", FormMethod.Post);}
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">ตำแหน่งงาน</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            ตำแหน่งงาน
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("position", "", new { @class = "form-control", @placeholder = "ระบุตำแหน่งงาน", @required = "true" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            ผู้บันทึกข้อมูล
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("admin", "ขวัญฤทัย  เสมอกลาง", new { @class = "form-control", @readonly = "true" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center">
                <div class="text-center">
                    <input type="submit" class="btn btn-primary" value="บันทึกข้อมูล" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>
</div>
@{ Html.EndForm();}
    <div class="modal fade" id="myModalView" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">ตำแหน่งงาน</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                ตำแหน่งงาน
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("position_view", "", new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                ผู้บันทึกข้อมูล
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("admin", "ขวัญฤทัย  เสมอกลาง", new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                วันนที่บันทึกข้อมูล
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("dateSubmit_view", "", new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-center">
                    <div class="text-center">
                        <button type="button" class="btn btn-default" data-dismiss="modal">ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end modal-->
@{ Html.BeginForm("editPosition", "Information", FormMethod.Post);}
    <div class="modal fade" id="myModalEdit" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">แก้ไขตำแหน่งงาน</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                ตำแหน่งงาน
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("position_edit", "", new { @class = "form-control", @placeholder = "ระบุตำแหน่งงาน", @required = "true" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                ผู้บันทึกข้อมูล
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("admin", "ขวัญฤทัย  เสมอกลาง", new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                วันนที่บันทึกข้อมูล
                            </div>
                            <div class="col-sm-9">
                                @Html.TextBox("dateSubmit_edit", "", new { @class = "form-control", @readonly = "true" })
                                @Html.TextBox("position_id", "", new { @class = "form-control" , @type="hidden"})
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-center">
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="บันทึกข้อมูล" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{ Html.EndForm();}
    <!--end modal-->
 <script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
    <script>
        $(document).on('click', '.viewData', function () {
            var pos_id = $(this).attr('ref');

            $.get('../../Information/getData?pos=' + pos_id, function (data) {

                var res = data.split('^');
                $('#position_view').val(res[1]);
                $('#dateSubmit_view').val(res[2]);
            })

           // alert($(this).attr('ref'));

        })
        $(document).on('click', '.editData', function () {
            var pos_id = $(this).attr('ref');

            $('#position_id').val(pos_id);
            $.get('../../Information/getData?pos=' + pos_id, function (data) {

                var res = data.split('^');
                $('#position_edit').val(res[1]);
                $('#dateSubmit_edit').val(res[2]);

            })
            // alert($(this).attr('ref'));

        })
        $(document).on('click', '.delData', function () {

            var x = $(this).attr('ref');

            swal({
                title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
                //text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "red",
                confirmButtonText: "ใช่, ลบข้อมูล!",
                cancelButtonText: "ไม่, ยกเลิก",
                closeOnConfirm: false,
                closeOnCancel: false
            },
          function (isConfirm) {
              if (isConfirm) {

                  $.get('../../Information/del_position?id=' + x, function () {

                      swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                      location.reload();
                  })

              } else {

                  swal("ยกเลิกแล้ว", "", "error");
              }
          });

        })
    </script>