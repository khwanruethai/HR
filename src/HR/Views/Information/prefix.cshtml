    <script>
        $(document).on('click', '.editPrefix', function () {

            var x = $(this).attr('ref');

            $('#prefix_id').val(x);

            $.get('../../Prefix/getPrefix?prefix=' + x, function (data) {

                var res = data.split('^');

                $('#prefix_th_edit').val(res[0]);
                $('#prefix_en_edit').val(res[1]);

            })

            //alert(x);
        })
    </script>
    <script>
        $(document).on('click', '.viewPrefix', function () {

            var x = $(this).attr('ref');


            $.get('../../Prefix/getPrefix?prefix=' + x, function (data) {

                var res = data.split('^');

                $('.prefix_th_view').html(res[0]);
                $('.prefix_en_view').html(res[1]);

            })


            //alert(x);
        })
    </script>
    <script>
        $(document).on('click', '.delPrefix', function () {

            var x = $(this).attr('ref');
            swal({
                title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
                //text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "red",
                confirmButtonText: "ใช่, ลบข้อมูล!",
                cancelButtonText: "ไม่, ยกเลิก",
                closeOnConfirm: false,
                closeOnCancel: false
            },
        function (isConfirm) {
            if (isConfirm) {

                $.get('../../Prefix/del_prefix?id=' + x, function () {

                    swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                    location.reload();
                })

            } else {

                swal("ยกเลิกแล้ว", "", "error");
            }
        });

        })
    </script>
 
