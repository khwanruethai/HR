    <script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
    <script>
        $(document).on('click', '.editStatus', function () {

            var x = $(this).attr('ref');

            $('#status_id').val(x);
            $.get('../../Status/getStatus?status=' + x, function (data) {

                $('#status_edit').val(data);

            })

          

        })
        $(document).on('click', '.viewStatus', function () {

            var x = $(this).attr('ref');

            $.get('../../Status/getStatus?status=' + x, function (data) {

                $('.status_name').text(data);

            })



        })

        $(document).on('click', '.delstatus', function () {

            var x = $(this).attr('ref');

            swal({
                title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
                //text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "red",
                confirmButtonText: "ใช่, ลบข้อมูล!",
                cancelButtonText: "ไม่, ยกเลิก",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isConfirm) {
                if (isConfirm) {

                    $.get('../../Status/del_status?id=' + x, function () {

                        swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                        location.reload();
                    })



                } else {

                    swal("ยกเลิกแล้ว", "", "error");
                }
            });

        })
    </script>
    