    <script>
        $(document).on('click', '.editType', function () {

            var x = $(this).attr('ref');

            $('#type_id').val(x);

            $.get('../../Information/getType?type=' + x, function (data) {


                $('#type_edit').val(data);

            })

        })
        $(document).on('click', '.viewType', function () {

            var x = $(this).attr('ref');


            $.get('../../Information/getType?type=' + x, function (data) {


                $('.type_view').text(data);

            })

        })
    </script>
    <script>
        $(document).on('click', '.delType', function () {

            var x = $(this).attr('ref');

            swal({
                title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
                //text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "red",
                confirmButtonText: "ใช่, ลบข้อมูล!",
                cancelButtonText: "ไม่, ยกเลิก",
                closeOnConfirm: false,
                closeOnCancel: false
            },
       function (isConfirm) {
           if (isConfirm) {

               $.get('../../Information/del_typeEmp?id=' + x, function () {

                   swal("ลบข้อมูลเรียบร้อยแล้ว!", "", "success");
                   location.reload();
               })

           } else {

               swal("ยกเลิกแล้ว", "", "error");
           }
       });

        })
    </script>